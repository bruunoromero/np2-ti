angular.module("app").directive("productDetails", function() {
  return {
    replace: true,
    restrict: "E",
    templateUrl: "<%= asset_path './productDetailsDirective.html' %>",
    transclude: true,
    scope: {
      product: "="
    },
    controller: [
      "$scope",
      "SessionAPI",
      function($scope, SessionAPI) {
        $scope.addToCart = function() {
          SessionAPI.addToCart($scope.product);
          console.log(SessionAPI.getCart());
        };
      }
    ]
  };
});
