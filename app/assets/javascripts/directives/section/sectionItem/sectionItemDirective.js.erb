angular.module("app").directive("sectionItem", function() {
  return {
    replace: true,
    restrict: "E",
    templateUrl: "<%= asset_path './sectionItemDirective.html' %>",
    scope: {
      id: "=",
      header: "=",
      artist: "=",
      price: "=",
      image: "="
    },
    controller: [
      "$scope",
      function($scope) {
        $scope.getImageName = function(name) {
          var res = name.toLowerCase();
          res = res.replace(/\s/g, "_").replace("/", ":");
          if (res === "purpose") {
            res += "_square";
          }

          return "/images/" + res + ".jpg";
        };
      }
    ]
  };
});
